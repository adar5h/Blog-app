<center>
    <h1>Showing Article details </h1>

    <p>Title: <strong><%= @article.title %></strong></p>
    <p>Description: <strong><%= @article.description %></strong></p>
    <p>Created by: <strong><%= @article.user.username %></strong></p>
    <p><%= link_to gravatar_for(@article.user), user_path(@article.user) %></p>

        <% if logged_in? && @article.user == current_user%>
            <%= link_to "Edit", edit_article_path(@article) %> |
            <%= link_to "Delete", article_path(@article), data: {'turbo-method': :delete } %> |
        <% end %>   
            <%= link_to "Return to articles listing", articles_path %>
</center>
    